@model FrankyFinance.Models.ResumenGastosViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Configuración básica -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Group Details</title>

    <!-- Enlaces a Bootstrap y estilos personalizados -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <!-- Contenedor principal -->
    <div class="container mt-5">
        <!-- Encabezado del grupo -->
        <h1 class="text-center text-white">@Model.GroupName</h1>
        <p class="text-center text-white">@Model.Description</p>

        <!-- Mensajes de éxito o error -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <!-- Resumen del total de gastos -->
        <div class="alert alert-info text-center mt-4">
            <h4>Total Expenses: $@Model.TotalGastos</h4>
        </div>

        <!-- Resumen de gastos por fecha -->
        <div class="row mt-4">
            <div class="col">
                <h3 class="text-white">Expense Summary by Date</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ResumenPorFecha.Any())
                        {
                            @foreach (var resumen in Model.ResumenPorFecha)
                            {
                                <tr>
                                    <td>@resumen.Fecha.ToShortDateString()</td>
                                    <td>$@resumen.Total</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-center">No expenses to summarize.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Lista detallada de gastos -->
        <div class="row mt-4">
            <div class="col">
                <h3 class="text-white">Expenses</h3>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Gastos.Any())
                        {
                            @foreach (var gasto in Model.Gastos)
                            {
                                <tr>
                                    <td>@gasto.Description</td>
                                    <td>$@gasto.Amount</td>
                                    <td>@gasto.Date.ToShortDateString()</td>
                                    <td>
                                        <a href="/Gastos/EditarGasto?id=@gasto.Id" class="btn btn-warning btn-sm">Edit</a>
                                        <form asp-action="EliminarGasto" asp-controller="Gastos" method="post" onsubmit="return confirm('Are you sure you want to delete this expense?');" style="display:inline;">
                                            <input type="hidden" name="id" value="@gasto.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">No expenses added yet.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Miembros del grupo -->
        <div class="row mt-4">
            <h3 class="text-white">Group Members</h3>
            <ul class="list-group">
                @foreach (var member in Model.GroupUsers)
                {
                    <li class="list-group-item">@member.User.Name</li>
                }
            </ul>
            <a href="/Grupos/AgregarUsuario?groupId=@Model.Id" class="btn btn-success mt-3">Add Member</a>
        </div>

        <!-- Lista de pagos -->
        <div class="row mt-4">
            <div class="col">
                <h3 class="text-white">Payments</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Paid By</th>
                            <th>Paid To</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Pagos.Any())
                        {
                            @foreach (var pago in Model.Pagos)
                            {
                                <tr>
                                    <td>@pago.Date.ToShortDateString()</td>
                                    <td>@pago.Pagador.Name</td>
                                    <td>@pago.Receptor.Name</td>
                                    <td>$@pago.Amount</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">No payments registered.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Resumen de deudas -->
        <div class="row mt-4">
            <div class="col">
                <h3 class="text-white">Debt Summary</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Debtor</th>
                            <th>Creditor</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ResumenDeudas?.Any() == true)
                        {
                            @foreach (var deuda in Model.ResumenDeudas)
                            {
                                <tr>
                                    <td>@deuda.Deudor</td>
                                    <td>@deuda.Acreedor</td>
                                    <td>$@deuda.Monto</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center">No debts to display.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Acciones rápidas -->
        <div class="row mt-4 text-center">
            <div class="col">
                <a href="/Gastos/CrearGasto?groupId=@Model.Id" class="btn btn-primary">Add Expense</a>
                <a href="/Pagos/RegistrarPago?groupId=@Model.Id" class="btn btn-primary">Register Payment</a>
                <a href="/Account/Dashboard" class="btn btn-secondary">Back to Dashboard</a>
            </div>
        </div>
    </div>

    <!-- Scripts de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
