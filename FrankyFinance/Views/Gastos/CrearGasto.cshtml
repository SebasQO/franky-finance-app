@model FrankyFinance.Models.ExpenseSplitViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Configuración básica del documento -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Expense</title>

    <!-- Enlaces a Bootstrap y estilos personalizados -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <!-- Contenedor principal -->
    <div class="container mt-5">
        <h1 class="text-white">Add Expense</h1>

        <!-- Formulario para agregar un gasto -->
        <form asp-action="CrearGasto" method="post">
            <!-- Campo oculto para el ID del grupo -->
            <input type="hidden" asp-for="GroupId" />

            <!-- Campo para la descripción del gasto -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label text-white">Description</label>
                <input asp-for="Description" class="form-control" style="background-color: #212529; color: white;" />
            </div>

            <!-- Campo para el monto total del gasto -->
            <div class="mb-3">
                <label asp-for="Amount" class="form-label text-white">Amount</label>
                <input asp-for="Amount" class="form-control" id="total-amount" style="background-color: #212529; color: white;" />
            </div>

            <!-- Selección de quién pagó el gasto -->
            <div class="mb-3">
                <label asp-for="PaidByUserId" class="form-label text-white">Paid By</label>
                <select asp-for="PaidByUserId" class="form-select" style="background-color: #212529; color: white; border:none">
                    @foreach (var user in ViewBag.Users)
                    {
                        <option value="@user.Id">@user.Name</option>
                    }
                </select>
            </div>

            <!-- Método de división del gasto -->
            <div class="mb-3">
                <label class="form-label text-white">Division Method</label>
                <select asp-for="DivisionMethod" class="form-select text-white" id="division-method" style="background-color: #212529; color: white; border:none">
                    <option value="Iguales">Equally</option>
                    <option value="MontoExacto">Exact Amount</option>
                    <option value="Porcentaje">Percentage</option>
                </select>
            </div>

            <!-- Tabla para dividir el gasto entre los usuarios -->
            <h4 class="text-white">Split Among Users</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Select</th>
                        <th>User</th>
                        <th>Amount</th>
                        <th>Percentage</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Divisions.Count; i++)
                    {
                        <tr>
                            <!-- Checkbox para seleccionar al usuario -->
                            <td>
                                <input type="checkbox" name="SelectedUserIds" value="@Model.Divisions[i].UserId" checked />
                            </td>
                            <!-- Nombre del usuario -->
                            <td>@Model.Divisions[i].UserName</td>
                            <!-- Campo para el monto asignado -->
                            <td>
                                <input type="number" class="form-control split-amount" name="Divisions[@i].Amount" value="0" />
                            </td>
                            <!-- Campo para el porcentaje asignado -->
                            <td>
                                <input type="number" class="form-control split-percentage" name="Divisions[@i].Percentage" value="0" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Botón para enviar el formulario -->
            <button type="submit" class="btn btn-primary">Add Expense</button>
        </form>
    </div>

    <!-- Script de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script para dividir automáticamente el gasto -->
    <script>
        const totalAmountInput = document.getElementById('total-amount');
        const divisionMethod = document.getElementById('division-method');
        const splitAmounts = document.querySelectorAll('.split-amount');
        const splitPercentages = document.querySelectorAll('.split-percentage');

        // Lógica para dividir el gasto según el método seleccionado
        divisionMethod.addEventListener('change', () => {
            const totalAmount = parseFloat(totalAmountInput.value) || 0;

            if (divisionMethod.value === 'Iguales') {
                const equalShare = totalAmount / splitAmounts.length; // División equitativa
                splitAmounts.forEach(input => input.value = equalShare.toFixed(2));
            }
            // Lógica adicional para otros métodos (Exact Amount, Percentage)
        });
    </script>
</body>
</html>
