@model FrankyFinance.Models.RegisterViewModel

@{
    Layout = null; // Define que no se utiliza un layout principal para esta vista
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Configuración básica del documento -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Franky Finance - Register</title>

    <!-- Enlaces a Bootstrap y estilos personalizados -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>

<!-- Cuerpo de la página: centrado vertical y horizontalmente -->
<body class="d-flex justify-content-center align-items-center min-vh-100 bg-dark text-white">

    <!-- Tarjeta de registro -->
    <div class="card p-4 shadow-lg" id="register-card">
        <!-- Encabezado con logo y título -->
        <div class="text-center mb-4">
            <img src="~/img/FrankyLogo.png" alt="Franky Finance Logo" style="width: 100px;">
            <h2 class="text-white">Crear una cuenta</h2>
        </div>

        <!-- Formulario de registro -->
        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken() <!-- Token de seguridad CSRF -->
            <!-- Campo para el nombre completo -->
            <div class="mb-3">
                <input asp-for="Name" type="text" class="form-control" placeholder="Nombre completo" required>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Campo para el correo electrónico -->
            <div class="mb-3">
                <input asp-for="Email" type="email" class="form-control" placeholder="Correo electrónico" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Campo para la contraseña con botón de mostrar/ocultar -->
            <div class="password-container mb-3 position-relative">
                <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" required>
                <i class="bi bi-eye-slash toggle-password position-absolute end-0 me-3 mt-2"
                   style="cursor: pointer; color: white;"></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Campo para confirmar la contraseña -->
            <div class="password-container mb-3 position-relative">
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirmar contraseña" required>
                <i class="bi bi-eye-slash toggle-password position-absolute end-0 me-3 mt-2"
                   style="cursor: pointer; color: white;"></i>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Botón de registro -->
            <button type="submit" class="btn btn-primary w-100 mb-3 mt-4">Registrarse</button>

            <!-- Opción de registro con redes sociales -->
            <p class="text-center text-white">O regístrate con</p>
            <div class="social-login d-flex justify-content-center mb-3">
                <button type="button" class="btn btn-outline-light me-2"><i class="bi bi-google"></i></button>
                <button type="button" class="btn btn-outline-light"><i class="bi bi-facebook"></i></button>
            </div>

            <!-- Enlace para iniciar sesión si ya se tiene cuenta -->
            <p class="text-center text-white">
                ¿Ya tienes una cuenta?
                <a href="~/Account/Login" class="text-decoration-none text-white">Inicia sesión aquí</a>
            </p>
        </form>
    </div>

    <!-- Script de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script para mostrar/ocultar contraseña -->
    <script>
        document.querySelectorAll('.toggle-password').forEach(toggle => {
            toggle.addEventListener('click', function () {
                const input = this.previousElementSibling; // Campo de contraseña
                if (input.type === "password") {
                    input.type = "text"; // Mostrar contraseña
                    this.classList.remove("bi-eye-slash");
                    this.classList.add("bi-eye");
                } else {
                    input.type = "password"; // Ocultar contraseña
                    this.classList.remove("bi-eye");
                    this.classList.add("bi-eye-slash");
                }
            });
        });
    </script>
</body>
</html>
